# Modern Art Portfolio - Backend Environment Configuration
# Foundation Architecture by Phoenix

# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
DATABASE_PATH=./data/portfolio.sqlite
REDIS_URL=redis://localhost:6379

# Content Management
CONTENT_DIRECTORY=../content
IMAGES_DIRECTORY=../content
MAX_IMAGE_SIZE=50000000
SUPPORTED_FORMATS=jpg,jpeg,png,webp,avif

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Image Processing
IMAGE_QUALITY_WEBP=75
IMAGE_QUALITY_AVIF=50
IMAGE_QUALITY_JPEG=80
IMAGE_SIZES=640,750,828,1080,1200,1920,2048,3840

# Social Features
ENABLE_COMMENTS=true
ENABLE_REACTIONS=true
ENABLE_REAL_TIME=true

# Email Configuration (for inquiries/purchases)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ADMIN_EMAIL=

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info